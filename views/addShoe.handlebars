    <div>
        <label for="shoeName">
            <strong>
                Add a shoe for display
            </strong>
        </label>

        <div class="">
            <input class="" name="shoeName" type="text" placeholder="enter shoe name" required />
            <input class="" name="image" type="text" placeholder="enter image url" required />
            <input class="" name="qty" type="text" placeholder="enter number of stock" required />
            <input class="" name="shoePrice" type="text" placeholder="enter a shoe price" required />
            <input class="" name="shoeColor" type="text" placeholder="enter a shoe color" required />
            <input class="" name="shoeSize" type="text" placeholder="enter a shoe size" required />
